@model IEnumerable<Infrastructure.Models.Informacion>

@{
    ViewBag.Title = "Index";
}

<h2>Announcements</h2>

<p>
    <a href="@Url.Action("Create", "Informacion", null)" class="btn btn-primary">New Announcement</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tipo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style="width: 200px">
            @Html.DisplayFor(modelItem => item.Titulo)
        </td>
        <td style="width: 600px">
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td style="width: 300px">
            @Html.DisplayFor(modelItem => item.Tipos[item.Tipo])
        </td>
        <td style="width: 180px">
            <a href="@Url.Action("Edit", "Informacion", new { id = item.Id })" class="btn btn-warning"><i class="fa-solid fa-pen"></i> Edit</a>
        </td>
    </tr>
}

</table>
