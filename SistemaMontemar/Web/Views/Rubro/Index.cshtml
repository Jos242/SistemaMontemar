@model IEnumerable<Infrastructure.Models.Rubro>

@{
    ViewBag.Title = "Index";
}

<h2>Payments</h2>

<p>
    <button type="button" class="btn btn-primary">@Html.ActionLink("Create New Payment", "Create")</button>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cobro)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cobro)
        </td>
        <td>
            <button type="button" class="btn btn-primary">@Html.ActionLink("Details", "Details", new { id = item.Id })</button>
            <button type="button" class="btn btn-primary">@Html.ActionLink("Edit", "Edit", new { id = item.Id })</button>
        </td>
    </tr>
}

</table>
