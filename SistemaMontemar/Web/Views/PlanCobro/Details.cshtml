@model Infrastructure.Models.PlanCobro

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Payment Plans</h4>
    <hr />
    <dl class="dl-horizontal" >
        <dt style="font-size: 18px;">
            <i class="fa-solid fa-circle-info"></i>
            @Html.DisplayNameFor(model => model.Descripcion):
        </dt>

        <dd style="font-size: 18px;">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>

        <dt style="font-size: 18px;">
            <i class="fa-solid fa-money-bill"></i>
            @Html.DisplayNameFor(model => model.Cobro):
        </dt>

        <dd style="font-size: 18px;">
            @Html.DisplayFor(model => model.Cobro)
        </dd>
        <dt style="font-size: 18px;">
            <i class="fa-solid fa-circle-check"></i>
            <b>@Html.DisplayNameFor(model => model.Rubro):</b>
        </dt>
        <dd style="font-size: 18px;">
            <ul style="font-size: 18px;">
                @foreach (var r in Model.Rubro)
                {
                    <li>
                        <b>@r.Descripcion</b>  :
                        @Html.DisplayFor(modelItem => r.Cobro)
                    </li>
                }

            </ul>

        </dd>
    </dl>

</div>
<p>
    <a href="@Url.Action("Index", "PlanCobro", null)" class="btn btn-outline-dark"><i class="fa-solid fa-reply"></i> Go Back</a>
</p>
