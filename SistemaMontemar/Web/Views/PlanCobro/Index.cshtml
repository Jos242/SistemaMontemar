@model IEnumerable<Infrastructure.Models.PlanCobro>

@{
    ViewBag.Title = "Index";
}

<h2>Payment Plans</h2>

<p>
    <a href="@Url.Action("Create", "PlanCobro", null)" class="btn btn-primary">Create New Payment Plan</a>
</p>
<table class="table">
    <tr>
        <th style="font-size: 18px;">
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th style="font-size: 18px;">
            @Html.DisplayNameFor(model => model.Cobro)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="font-size: 18px;">
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td style="font-size: 18px;">
                @Html.DisplayFor(modelItem => item.Cobro)
            </td>
            <td style="font-size: 18px;">
                <a href="@Url.Action("Details", "PlanCobro", new { id = item.Id })" class="btn btn-info"><i class="fa-solid fa-circle-info"></i> Details</a>
                <a href="@Url.Action("Edit", "PlanCobro", new { id = item.Id })" class="btn btn-warning"><i class="fa-solid fa-pen"></i> Edit</a>
            </td>

        </tr>
    }

</table>
