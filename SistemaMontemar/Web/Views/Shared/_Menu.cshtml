                @* Información usuario *@
                @{
                    string email = "User Profile";
                    //Validar si existe en la sesión
                    if (Session["User"] != null)
                    {
                        oUsuario = (Infrastructure.Models.Usuario)Session["User"];
                        if (oUsuario != null)
                        {
                            nombre = $"{oUsuario.Nombre} {oUsuario.Apellido01}";
                            email = oUsuario.Email;
                        }
                    }
                }
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">User Profile</a>

                    <ul class="dropdown-menu">
                        <li>
                            @if (Session["User"] != null)
