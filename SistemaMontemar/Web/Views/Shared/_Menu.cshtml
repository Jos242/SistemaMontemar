                    }

                    if (admin == 1)
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Residences", "Index", "Residencia", null, new { @class = "nav-link" })
                        </li>

                        <li class="nav-item">
                            @Html.ActionLink("Payment Plans", "Index", "PlanCobro", null, new { @class = "nav-link" })
                        </li>

