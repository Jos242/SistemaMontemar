                            @Html.ActionLink("Account Status", "Index", "EstadoCuenta", null, new { @class = "nav-link" })
                        </li>

                        <li class="nav-item">
                            @Html.ActionLink("Incidents", "Index", "Incidencia", null, new { @class = "nav-link" })
                        </li>

                        <li class="nav-item">
                            @Html.ActionLink("Announcement", "Index", "Informacion", null, new { @class = "nav-link" })
