@model IEnumerable<Infrastructure.Models.Residencia>

@{
    ViewBag.Title = "Index";
}
<h2>Listado de Residencias</h2>
<div class="row">
    <div class="col-lg-9">
        <div id="resultado" class="row">
            @foreach (var item in Model)
            {
                <div class="col-sm-6">
                    <div class="card">
                        <a href="@Url.Action("Details", "Residencia", new { id = item.Id })" class="btn btn-primary">
                            <div class="card-body">
                                <h4 class="card-title">N° Condominio: @Html.DisplayFor(modelItem => item.Id)</h4>
                                <h5 class="card-subtitle mb-2 text-muted"> <i class="fa-solid fa-circle-user"></i>@(item.Tipo == 0 ? "Small" : item.Tipo == 1 ? "Average" : "Large")</h5>
                                <h6 class="card-subtitle mb-2 text-muted">@(item.Estado == 0 ? "In Construction" : item.Estado == 1 ? "Available" : "Inhabited")</h6>
                                <div class="card-body">
                                    @* Accion Orden *@
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
